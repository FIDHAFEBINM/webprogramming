<html>
<head>
<script type="text/javascript">
function validationform()
{
var name=document.form.name.value;
var password=document.form.password.value;
var email=document.form.email.value;
var atposition=email.indexOf("@");
var dotposition=email.lastindexOf(".");
if (name=="" || name==null)
{
alert("enter validate name");
}
if(password.length<8)
{
window.alert("enter atleast 8 values");
}
else if(atposition<1 || dotposition<atposition ||dotposition+2>=email.length)
{
alert("enter a valid email");
}
}
</script>
</head>
<body>
<div style="background-color:#b7e3f7">
<font style="padding:50%">REGISTRATIONFORM</font><br><br>
<form name="form" onsubmit=return "validationform()">

<div height="600px" width="50%" align="">
